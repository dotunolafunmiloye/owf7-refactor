  <documentation>https://bitbucket.org/refactor/grails-webdriver/wiki/Home</documentation>
  <resources>
    <resource>BuildConfig</resource>
    <resource>DataSource</resource>
    <resource>SecurityFilters</resource>
    <resource>UrlMappings</resource>
    <resource>webdriver.AjaxTestController</resource>
    <resource>webdriver.AuthorController</resource>
    <resource>webdriver.BookController</resource>
    <resource>webdriver.HomeController</resource>
    <resource>webdriver.LoginController</resource>
    <resource>webdriver.Author</resource>
    <resource>webdriver.Book</resource>
    <resource>webdriver.BookType</resource>
  </resources>
  <dependencies />
  <behavior />
</plugin>